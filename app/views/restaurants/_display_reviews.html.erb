
<h3><u> Reviews </u></h3>
<h4>Average Rating: <%= @review_average %></h4><br>
<% reviews.each do |review| %>
    <ul>
    <h5> By: <%= review.user.username %></h5>
    <h6> Reviewed on: <%= review.updated_at.strftime("%m/%d/%Y at %I:%M%p") %></h6>
    <%= review.generate_stars %><br><br>
    <%= review.content %><br><br>
    <% if current_user == review.user %>   
    <%= link_to "Delete Your Review", review_path(review), method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
    <hr />
    </ul>
<% end %>
    

