<h2>
<%= link_to 'Home', restaurants_path %> |
<%= link_to 'Cuisines', cuisines_path %> |
<% if logged_in? %>
  <% if current_user.admin? %>
  <%= link_to 'Admin Restaurants', admin_restaurants_path %> |
  <% end %>
  <%= link_to 'My Account', user_path(current_user) %> |
  <%= link_to 'Sign Out', logout_path, method: :delete %>
<% end %>
  <br><br>
  <% if logged_in? %>
  <%= form_tag restaurants_path, method: :get, class: "navbar-form navbar-right", role: "search" do %>
    <%= text_field_tag :search %>
    <%= submit_tag "Search", name: nil, class: "btn btn-outline-success" %>
    <% end %>
<% end %>
</h2>