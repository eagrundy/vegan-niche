<h1>Created Restaurants</h1>

<%= link_to 'New Restaurant', new_admin_restaurant_path %>
<br><br>
<%= link_to 'New Cuisine and New Restaurant', new_admin_cuisine_path %>
<br><br> 

<table>
  <thead>
    <tr>
      <th><u>Name</u></th>
      <th><u>Cuisine</u></th>
      <th colspan="3"></th>
      <th rowspan="6"></th>
    </tr>
  </thead>

  <tbody>
  <% @restaurants.order('updated_at DESC').each do |r| %>
    <tr>
    <td><%= r.name %></td>
    <td><%= r.cuisine.name %></td>
    <td><%= link_to 'Show', admin_restaurant_path(r) %></td>
    <td><%= link_to 'Edit', edit_admin_restaurant_path(r) %></td>
    <td><%= link_to 'Delete', admin_restaurant_path(r), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>


