<div class="all-restaurants">
    <% @restaurants.order('updated_at DESC').each do |r| %>
    <div class="card-text">
    <h2><%= link_to(restaurant_name(r), restaurant_path(r)) %></h2>
    <p><img src="<%= r.image_url %>" alt="<%= r.name %>" height="200" width="270"></p>
    <p><strong>Vegan Options:</strong> <%= r.options %></p>
    <p><strong>Cuisine: </strong><%= r.cuisine.name %></p>
    <h6><p><strong>Updated at: </strong> <%= r.updated_at.strftime("%m/%d/%Y at %I:%M%p") %></h6>
    <%= link_to 'Read more', r %>
    <br><br>
    </div>
    <% end %>
</div>